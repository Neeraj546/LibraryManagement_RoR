<div class="jumbotron"><h3>Edit <%= resource_name.to_s.humanize %></h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, id: :name, :class => "form-control" %>
  </div>

  <div class="field form-group" style="display: none;">
    <%= f.label :admin %><br />
    <%= f.text_field :admin, id: :admin, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :date_of_birth %><br />
    <%= f.date_field :date_of_birth, id: :date_of_birth, :class => "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Update", :class => "btn btn-primary" %>
  </div>
<% end %>
</div>
<div class="jumbotron">
<h3>Deactivate my Account</h3>

<% if current_user.admin? %>

<p>Unhappy? <%= button_to "Can not delete admin account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger disabled" %></p>
<% else %>
<p>Unhappy? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger" %></p>
<% end %>

</div><%= link_to "Back", :back, :class => "btn btn-secondary" %><br><br>